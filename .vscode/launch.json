  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/index",
      "runtimeArgs": [
        "--inspect"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "run",
        "jest-debug"
      ],
      "port": 9229
    }
  ]
}
